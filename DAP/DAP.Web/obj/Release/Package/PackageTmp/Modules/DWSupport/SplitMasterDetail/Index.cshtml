@{
    ViewData["Title"] = "Split View Master/Detail Grids";
}

@section Head {
    <style type="text/css">
        .gutter {
            background-color: transparent;
            background-repeat: no-repeat;
            background-position: 50%;
        }

        .gutter.gutter-horizontal {
            cursor: ew-resize;
            background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAeCAYAAADkftS9AAAAIklEQVQoU2M4c+bMfxAGAgYYmwGrIIiDjrELjpo5aiZeMwF+yNnOs5KSvgAAAABJRU5ErkJggg==')
        }

        .gutter.gutter-vertical {
            cursor: ns-resize;
            background-image:  url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAFAQMAAABo7865AAAABlBMVEVHcEzMzMzyAv2sAAAAAXRSTlMAQObYZgAAABBJREFUeF5jOAMEEAIEEFwAn3kMwcB6I2AAAAAASUVORK5CYII=')
        }

        #SplitPane {
            background: #f6f6f6;
            padding: 2px;
            border: 1px solid #ccc;
        }

        #SplitPane > .pane {
            border: 1px solid #c0c0c0;
            background: #fff;
            box-shadow: inset 0 1px 2px #e4e4e4;
            padding: 10px;
            overflow: hidden;
        }
    </style>
}

@section ContentHeader {
    <h1>@ViewData["Title"]<small></small></h1>
}

<div id="SplitPane"></div>

<script type="text/javascript">
    jQuery(function () {
        new DAP.DWSupport.SplitMasterDetailPane($("#SplitPane"));
        Q.initFullHeightGridPage($('#SplitPane'));
        $('.alert button').click(function () {
            $(window).triggerHandler('resize');
            window.setTimeout(function () {
                $('.require-layout').each((i, el) => $(el).triggerHandler('layout'));
            }, 500);
        });
    });
</script>